@page
@model ClickCart.Pages.VerifyCodeModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	Layout = "_UserLayout";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="text-danger text-center" style="font-size:medium">@TempData["msg"]</h2>
        </div>
    </div>
</div>
<div class="container mt-5 mb-lg-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center">
                    <h4>Verify Code</h4>
                </div>
                <div class="card-body">
                    <form asp-page-handler="Verify" method="post">
                        <div class="form-group">
                            <label for="verificationCode">Enter 4-digit code</label>
                            <input asp-for="@Model.Code" type="text" class="form-control" id="verificationCode" maxlength="4" placeholder="1234" pattern="\d{4}" title="Please enter exactly 4 digits">
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mt-3">Verify</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<br/>