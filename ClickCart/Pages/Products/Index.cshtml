@page
@model ClickCart.Pages.Customer.Products.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	Layout = "_UserLayout";
	ViewBag.Title = "Sản phẩm";
}
<section id="advertisement">
	<div class="container">
		<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1140 156">
			<!-- Background -->
			<rect width="1140" height="156" fill="#FF6B00" />

			<!-- Decorative elements -->
			<circle cx="900" cy="78" r="50" fill="#FFF" opacity="0.1" />
			<circle cx="950" cy="78" r="30" fill="#FFF" opacity="0.15" />
			<circle cx="1000" cy="78" r="40" fill="#FFF" opacity="0.1" />

			<!-- Main text -->
			<text x="40" y="65" font-family="Arial" font-size="36" font-weight="bold" fill="#FFFFFF">
				HOT DEAL - MUA
				1 TẶNG 1
			</text>
			<text x="40" y="105" font-family="Arial" font-size="24" fill="#FFFFFF">
				Áp dụng cho tất cả đồ uống có ga
				từ 15/1 - 31/1
			</text>

			<!-- Price -->
			<circle cx="800" cy="78" r="50" fill="#FFFFFF" />
			<text x="775" y="90" font-family="Arial" font-size="28" font-weight="bold" fill="#FF6B00">-50%</text>
		</svg>
	</div>
</section>
<!--Thanh searchbar-->
<section id="search-bar" class="my-4">
	<div class="container">
		<div class="row">
			<div class="col-md-8 offset-md-2">
				<form method="get" action="/Customer/Products/Search">
					<div class="input-group">
						<input type="text" name="query" class="form-control" placeholder="Nhập tên sản phẩm cần tìm..." aria-label="Search">
						<div class="input-group-append">
							<button class="btn btn-primary" type="submit">
								<i class="fa fa-search"></i> Tìm kiếm
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
<section>
	<div class="container">
		<div class="row">
			<div class="col-sm-3">
				<div class="left-sidebar">
					<h2>Danh mục</h2>
					<div class="panel-group category-products" id="accordian">
						<!--category-productsr-->
						<div class="panel panel-default">
							<div class="panel-heading">
								<h4 class="panel-title"><a href="#">Đồ Uống</a></h4>
							</div>
						</div>
						<div class="panel panel-default">
							<div class="panel-heading">
								<h4 class="panel-title"><a href="#">đồ ăn vặt</a></h4>
							</div>
						</div>
						<div class="panel panel-default">
							<div class="panel-heading">
								<h4 class="panel-title"><a href="#">gia vị</a></h4>
							</div>
						</div>
						<div class="panel panel-default">
							<div class="panel-heading">
								<h4 class="panel-title"><a href="#">mì ăn liền</a></h4>
							</div>
						</div>
						<div class="panel panel-default">
							<div class="panel-heading">
								<h4 class="panel-title"><a href="#">combo</a></h4>
							</div>
						</div>
					</div><!--/category-productsr-->

					<div class="shipping text-center">
						<!--shipping-->
						<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 270 329">
							<!-- Background -->
							<rect width="270" height="329" fill="#1E88E5" />
							<rect x="0" y="0" width="270" height="329" fill="url(#gradient1)" />

							<!-- Gradient definition -->
							<defs>
								<linearGradient id="gradient1" x1="0%" y1="0%" x2="100%" y2="100%">
									<stop offset="0%" style="stop-color:#1E88E5;stop-opacity:1" />
									<stop offset="100%" style="stop-color:#64B5F6;stop-opacity:0.8" />
								</linearGradient>
							</defs>

							<!-- Main text -->
							<text x="20" y="80" font-family="Arial" font-size="24" font-weight="bold"
								  fill="#FFFFFF">HAPPY HOUR</text>
							<text x="20" y="120" font-family="Arial" font-size="36" font-weight="bold"
								  fill="#FFFFFF">GIẢM 20%</text>
							<text x="20" y="160" font-family="Arial" font-size="18" fill="#FFFFFF">15H - 17H</text>
							<text x="20" y="190" font-family="Arial" font-size="16" fill="#FFFFFF">Mỗi ngày</text>

							<!-- Decorative elements -->
							<rect x="20" y="220" width="230" height="2" fill="#FFFFFF" opacity="0.3" />

							<!-- CTA text -->
							<text x="20" y="280" font-family="Arial" font-size="18" fill="#FFFFFF">
								Đặt hàng
								ngay!
							</text>
						</svg>
					</div><!--/shipping-->

				</div>
			</div>

			<div class="col-sm-9 padding-right">
				<div class="features_items">
					<!--features_items-->
					<h2 class="title text-center">sản phẩm</h2>
					@if (Model.Products.Any())
					{
						@foreach (var product in Model.Products)
						{
							<div class="col-sm-4">
								<div class="product-image-wrapper">
									<div class="single-products">
										<div class="productinfo text-center">
											<img style="width:250px" src="/common/images/products/@product.ImageUrl" alt="@product.ProductName" />
											<h2>@product.Price VND</h2>
											<p>@product.ProductName</p>
											<a href="#" class="btn btn-default add-to-cart">
												<i class="fa fa-shopping-cart"></i> Thêm vào giỏ hàng
											</a>
										</div>
										<div class="product-overlay">
											<div class="overlay-content">
												<h2>@product.Price VND</h2>
												<p>@product.ProductName</p>
												<a href="#" class="btn btn-default add-to-cart">
													<i class="fa fa-shopping-cart"></i> Thêm vào giỏ hàng
												</a>
											</div>
										</div>
									</div>
								</div>
							</div>
						}
					}
					else
					{
						<p class="text-center">Không có sản phẩm nào để hiển thị.</p>
					}
					</div>
					<!-- Pagination -->
					<ul class="pagination justify-content-center">
						@if (Model.CurrentPage > 1)
						{
							<li class="page-item">
								<a class="page-link" href="@Url.Page("Index", new { pageNumber = Model.CurrentPage - 1 })">&laquo; Trước</a>
							</li>
						}

						@for (int i = 1; i <= Model.TotalPages; i++)
						{
							<li class="page-item @(i == Model.CurrentPage ? "active" : "")">
								<a class="page-link" href="@Url.Page("Index", new { pageNumber = i })">@i</a>
							</li>
						}

						@if (Model.CurrentPage < Model.TotalPages)
						{
							<li class="page-item">
								<a class="page-link" href="@Url.Page("Index", new { pageNumber = Model.CurrentPage + 1 })">Tiếp &raquo;</a>
							</li>
						}
					</ul>
				</div><!--features_items-->
			</div>
		</div>
	</div>
</section>

<script src="js/jquery.js"></script>
<script src="js/price-range.js"></script>
<script src="js/jquery.scrollUp.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/jquery.prettyPhoto.js"></script>
<script src="js/main.js"></script>
