@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "_UserLayout";
}


<section id="slider">
    <!--slider-->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#slider-carousel" data-slide-to="1"></li>
                        <li data-target="#slider-carousel" data-slide-to="2"></li>
                    </ol>

                    <div class="carousel-inner">
                        <div class="item active">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 400">
                                <!-- Background -->
                                <rect width="1200" height="400" fill="#F8F9FA" />

                                <!-- Decorative elements -->
                                <circle cx="900" cy="200" r="160" fill="#FFE4E1" opacity="0.6" />
                                <circle cx="950" cy="150" r="100" fill="#FFA07A" opacity="0.4" />

                                <!-- Shopping cart icon -->
                                <path d="M850 180 L950 180 L920 240 L830 240 Z" fill="#FF6B6B" />
                                <circle cx="860" cy="260" r="15" fill="#495057" />
                                <circle cx="900" cy="260" r="15" fill="#495057" />

                                <!-- Text elements -->
                                <text x="200" y="150" font-family="Arial" font-size="48" font-weight="bold"
                                      fill="#212529">KHÁM PHÁ MUA SẮM ONLINE</text>
                                <text x="200" y="200" font-family="Arial" font-size="24" fill="#6C757D">
                                    Tiện lợi -
                                    Nhanh chóng - An toàn
                                </text>
                                <text x="200" y="240" font-family="Arial" font-size="20" fill="#6C757D">
                                    Miễn phí vận
                                    chuyển cho đơn hàng trên 500K
                                </text>
                            </svg>
                        </div>
                        <div class="item">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 400">
                                <!-- Background -->
                                <rect width="1200" height="400" fill="#E3F2FD" />

                                <!-- Decorative elements -->
                                <rect x="800" y="100" width="200" height="200" fill="#90CAF9" opacity="0.6" />
                                <rect x="850" y="150" width="150" height="150" fill="#64B5F6" opacity="0.4" />

                                <!-- Device icons -->
                                <rect x="850" y="160" width="80" height="120" rx="10" fill="#1976D2" />
                                <rect x="860" y="170" width="60" height="90" fill="#FFFFFF" />

                                <!-- Text elements -->
                                <text x="200" y="150" font-family="Arial" font-size="48" font-weight="bold"
                                      fill="#1976D2">MUA SẮM THÔNG MINH</text>
                                <text x="200" y="200" font-family="Arial" font-size="24" fill="#2196F3">
                                    Mọi lúc -
                                    Mọi nơi - Mọi thiết bị
                                </text>
                                <text x="200" y="240" font-family="Arial" font-size="20" fill="#64B5F6">
                                    Ưu đãi độc
                                    quyền cho khách hàng mới
                                </text>
                            </svg>
                        </div>

                        <div class="item">
                            <svg xmlns="http://www.w3.org/svg" viewBox="0 0 1200 400">
                                <!-- Background -->
                                <rect width="1200" height="400" fill="#F3E5F5" />

                                <!-- Decorative elements -->
                                <path d="M800 100 L1000 100 L900 300 Z" fill="#CE93D8" opacity="0.6" />
                                <path d="M850 150 L950 150 L900 250 Z" fill="#BA68C8" opacity="0.4" />

                                <!-- Gift box icon -->
                                <rect x="850" y="160" width="100" height="100" fill="#9C27B0" />
                                <rect x="880" y="140" width="40" height="40" fill="#9C27B0" />
                                <path d="M870 160 L930 160 L900 180 Z" fill="#E1BEE7" />

                                <!-- Text elements -->
                                <text x="200" y="150" font-family="Arial" font-size="48" font-weight="bold"
                                      fill="#4A148C">SIÊU SALE CUỐI TUẦN</text>
                                <text x="200" y="200" font-family="Arial" font-size="24" fill="#6A1B9A">
                                    Giảm giá đến
                                    50% tất cả sản phẩm
                                </text>
                                <text x="200" y="240" font-family="Arial" font-size="20" fill="#8E24AA">
                                    Săn ngay
                                    deal hot - Số lượng có hạn
                                </text>
                            </svg>
                        </div>

                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section><!--/slider-->

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-12 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">Sản phẩm nổi bật</h2>
                    @foreach (var fproduct in Model.FeaturedProducts)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <a asp-page="./Products/Details" asp-route-id="@fproduct.ProductID">
                                            <div style="width: 250px; height: 250px; margin-left:50px; display: flex; justify-content: center; align-items: center;">
                                                <img style="max-width: 100%; max-height: 100%; object-fit: contain;"
                                                     src="/common/images/products/@fproduct.ImageUrl" alt="@fproduct.ProductName" />
                                            </div>
                                        </a>
                                        <h2 class="product-price">@fproduct.Price.ToString("N0") VND</h2>
                                        <h3 class="product-name">
                                            @fproduct.ProductName
                                        </h3>
                                        @* 										<a href="#" class="btn btn-default add-to-cart">
                                    <i class="fa fa-shopping-cart"></i> Thêm vào giỏ hàng
                                    </a> *@
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </div><!--features_items-->

                <div class="category-tab">
                    <!--category-tab-->
                    <div class="col-sm-12">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#combo" data-toggle="tab">Combo</a></li>
                            @foreach (var category in Model.Categories)
                            {
                                <li><a href="#@category.CategoryID" data-toggle="tab">@category.CategoryName</a></li>
                            }
                        </ul>
                    </div>
                    <!--Content-->
                    <div class="tab-content">
                        @foreach (var category in Model.Categories)
                        {
                            <div class="tab-pane fade" id="@category.CategoryID">

                                @foreach (var product in category.Products)
                                {

                                    <div class="col-sm-3">
                                        <div class="product-image-wrapper">
                                            <div class="single-products">
                                                <div class="productinfo text-center">
                                                    <a asp-page="./Products/Details" asp-route-id="@product.ProductID">
                                                        <div style="width: 250px; height: 250px; padding: 10px; display: flex; justify-content: center; align-items: center;">
                                                            <img style="max-width: 100%; max-height: 100%; object-fit: contain;"
                                                                 src="/common/images/products/@product.ImageUrl"
                                                                 alt="@product.ProductName" />
                                                        </div>
                                                    </a>
                                                    <h2>@product.Price.ToString("N0") VND</h2>
                                                    <h3 style="height: 50px; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; font-size: 14px;">
                                                        @product.ProductName
                                                    </h3>
                                                    <a asp-page-handler="AddToCart" asp-page="/Cart" asp-route-ProductID="@product.ProductID" asp-route-Quantity="1" class="btn btn-default add-to-cart">
                                                        <i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        <div class="tab-pane fade in active" id="combo">
                            @foreach (var combo in Model.Combos)
                            {
                                <div class="col-sm-3">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <div style="width: 250px; height: 250px; padding: 10px; display: flex; justify-content: center; align-items: center;">
                                                    <img style="max-width: 100%; max-height: 100%; object-fit: contain;"
                                                         src="~/common/images/products/@combo.ImageUrl" alt="@combo.ComboName" />
                                                </div>
                                                <h2>@combo.Price.ToString("N0") VND</h2>
                                                <h3 style="height: 50px; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; font-size: 14px;">
                                                    @combo.ComboName <br /> Set Combo 2-3 Người
                                                </h3>
                                                <a href="#" class="btn btn-default add-to-cart">
                                                    <i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            }
                        </div>
                    </div>
                </div><!--/category-tab-->

                <div class="recommended_items">
                    <!--recommended_items-->
                    <h2 class="title text-center">sản phẩm được đề xuất</h2>

                    <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="item active">
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="/common/images/products/Do_An_Vat/Snach khoai tây Lay's tôm hùm cay lon 105 g.png"
                                                     alt="" />
                                                <h2>28,400 VND</h2>
                                                <p>Snach khoai tây Lay's tôm hùm cay lon 105 g</p>
                                                <a href="#" class="btn btn-default add-to-cart">
                                                    <i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng
                                                </a>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="/common/images/products/Combo/Combo Heo Nướng.jpg"
                                                     alt="" />
                                                <h2>290,000 VND</h2>
                                                <p>Combo Heo Nướng <br /> Set Combo 2-3 Người</p>
                                                <a href="#" class="btn btn-default add-to-cart">
                                                    <i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng
                                                </a>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="/common/images/products/Do_An_Vat/Snack Lay Stax khoai tây vị tự nhiên 160g.png"
                                                     alt="" />
                                                <h2>38,600 VND</h2>
                                                <p>Snack Lay Stax khoai tây vị tự nhiên 160g</p>
                                                <a href="#" class="btn btn-default add-to-cart">
                                                    <i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng
                                                </a>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="/common/images/products/Nuoc_Giai_Khat/Nước uống sữa trái cây bổ dưỡng hương cam Nutri Boost chai 1L.jpg"
                                                     alt="" />
                                                <h2>18,800 VND</h2>
                                                <p>Nước uống sữa trái cây bổ dưỡng hương cam Nutri Boost chai 1L</p>
                                                <a href="#" class="btn btn-default add-to-cart">
                                                    <i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng
                                                </a>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="/common/images/products/Combo/Lẩu Riêu Cua Bắp Bò Sườn Sụn.jpg"
                                                     alt="" />
                                                <h2>290,000 VND</h2>
                                                <p>Lẩu Riêu Cua Bắp Bò Sườn Sụn<br /> Set Combo 2-3 Người</p>
                                                <a href="#" class="btn btn-default add-to-cart">
                                                    <i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="/common/images/products/Nuoc_Giai_Khat/Thùng 36 hộp sữa đậu nành Fami canxi ít đường 200ml.jpg"
                                                     alt="" />
                                                <h2>181,800 VND</h2>
                                                <p>Thùng 36 hộp sữa đậu nành Fami canxi ít đường 200ml</p>
                                                <a href="#" class="btn btn-default add-to-cart">
                                                    <i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng
                                                </a>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a class="left recommended-item-control" href="#recommended-item-carousel"
                           data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a class="right recommended-item-control" href="#recommended-item-carousel"
                           data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>
                </div><!--/recommended_items-->

            </div>
        </div>
    </div>
</section>




<script src="~/common/js/jquery.js"></script>
<script src="~/common/js/bootstrap.min.js"></script>
<script src="~/common/js/jquery.scrollUp.min.js"></script>
<script src="~/common/js/price-range.js"></script>
<script src="~/common/js/jquery.prettyPhoto.js"></script>
<script src="~/common/js/main.js"></script>

