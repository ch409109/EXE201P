<style>
	.view-detail-btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 10px 10px;
		background-color: #1976d2; /* Màu đỏ cam */
		color: white;
		border: none;
		border-radius: 5px;
		cursor: pointer;
		transition: all 0.3s ease;
		text-decoration: none;
		margin-bottom: 30px;
	}

		.view-detail-btn:hover {
			background-color: #ff5252;
			transform: translateY(-2px);
			box-shadow: 0 2px 8px rgba(255, 107, 107, 0.3);
		}

		.view-detail-btn i {
			margin-right: 8px;
			font-size: 16px;
		}

		.view-detail-btn span {
			font-weight: 500;
			font-size: 14px;
		}

	.carousel-inner {
		position: relative;
	}

	.control-carousel {
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		font-size: 36px;
		color: #fff;
		background: rgba(0, 0, 0, 0.5);
		width: 40px;
		height: 40px;
		line-height: 40px;
		text-align: center;
		border-radius: 50%;
		text-decoration: none;
		z-index: 5;
	}

		.control-carousel.left {
			left: -50px;
		}

		.control-carousel.right {
			right: -50px;
		}

		.control-carousel:hover {
			background: rgba(0, 0, 0, 0.8);
			color: #fff;
			text-decoration: none;
		}

	.carousel .item {
		padding: 0 50px;
	}

	@@media (max-width: 768px) {
		.control-carousel.left {
			left: 10px;
		}

		.control-carousel.right {
			right: 10px;
		}

		.carousel .item {
			padding: 0;
		}
	}
</style>




